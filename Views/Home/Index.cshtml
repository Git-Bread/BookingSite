@using BookingSite.Models.ViewModels
@model List<PublicRoomViewModel>

@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Welcome to Room Booking</h1>
            <p class="lead mb-4">Your one-stop solution for managing meeting room reservations efficiently.</p>
            
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h4 mb-3">About Room Booking</h2>
                    <div class="row text-start">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar-check me-2"></i>
                                <span>View available rooms and time slots</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-clock me-2"></i>
                                <span>Book rooms for your meetings</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar-times me-2"></i>
                                <span>Cancel or modify bookings</span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user me-2"></i>
                                <span>Manage your booking history</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info" role="alert">
                <p class="mb-0">Please log in to access the room booking system.</p>
            </div>
        </div>
    </div>
</div>

<partial name="_PublicRooms" model="Model" />
